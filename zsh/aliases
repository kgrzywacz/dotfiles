platform=`uname`
if [[ $platform == 'Linux' ]]; then
    alias l='ls -lrth --color'
    alias go='gnome-open' 
elif [[ $platform == 'Darwin' ]]; then
    alias l='ls -lrthG'
fi

alias vs='vim ~/sfdev/workspaces/'
alias cd..='cd ..'
alias rc='. ~/.zshrc'
alias v='vim'
alias vi='vim'
alias gs='git status'
alias ga='git add'
# alias irssi='TERM=screen irssi'
